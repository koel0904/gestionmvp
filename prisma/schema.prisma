generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}


model Local {
  id      Int    @id @default(autoincrement())
  name    String
  address String?
  phone   String?
  email   String?

  users       User[]
  proveedores Proveedores[]
  inventario  Inventario[]
  ventas      Ventas[]
  clientes    Clientes[]
}

model User {
  id          Int      @id @default(autoincrement())
  name        String
  email       String   @unique
  phone       String?
  password    String   @db.VarChar(255)
  role        String   @default("user")
  permissions Json     @default("[]")
  twoFactorCode  String? @db.VarChar(255)
  twoFactorCodeExpiry DateTime?

  local    Local? @relation(fields: [localId], references: [id])
  localId  Int?

  master      User?    @relation("MasterSubusers", fields: [masterId], references: [id])
  masterId    Int?     @unique
  subusers    User[]   @relation("MasterSubusers")
}

model Proveedores {
  id      Int     @id @default(autoincrement())
  name    String
  email   String  @unique
  phone   String?
  
  local   Local   @relation(fields: [localId], references: [id])
  localId Int

  inventario Inventario[]
}

model Inventario {
  id            Int     @id @default(autoincrement())
  name          String
  precio_compra Float
  precio_venta  Float
  stock         Int
  
  proveedor   Proveedores @relation(fields: [proveedorId], references: [id])
  proveedorId Int
  
  local   Local   @relation(fields: [localId], references: [id])
  localId Int

  ventas Ventas[]
}

model Clientes {
  id    Int     @id @default(autoincrement())
  name  String
  email String  @unique
  phone String?

  local   Local   @relation(fields: [localId], references: [id])
  localId Int

  ventas Ventas[]
}

model Ventas {
  id           Int      @id @default(autoincrement())
  cantidad     Int
  precio_venta Float
  total        Float
  fecha        DateTime @default(now())
  
  cliente   Clientes @relation(fields: [clienteId], references: [id])
  clienteId Int
  
  inventario   Inventario @relation(fields: [inventarioId], references: [id])
  inventarioId Int

  local   Local   @relation(fields: [localId], references: [id])
  localId Int
}
