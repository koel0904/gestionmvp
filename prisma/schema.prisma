generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Business {
  id    Int    @id @default(autoincrement())
  name  String
  users User[]
}

model User {
  id          Int      @id @default(autoincrement())
  name        String
  email       String   @unique
  phone       String?
  password    String   @db.VarChar(255)
  role        String   @default("user")
  permissions Json     @default("[]")

  business    Business @relation(fields: [businessId], references: [id])
  businessId  Int

  master      User?    @relation("MasterSubusers", fields: [masterId], references: [id])
  masterId    Int?     @unique
  subusers    User[]   @relation("MasterSubusers")
}
